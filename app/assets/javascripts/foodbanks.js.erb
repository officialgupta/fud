function getLocation() {
    if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(showPosition);
    }
}

function showPosition(position) {
  $('#gps-link').attr("href", "<%=@url%>?lat=" + position.coords.latitude + "&lng=" + position.coords.longitude + "&distance=10");
  $('#gps-link').css("display", "inline");
}

$( document ).ready(function(){
  if ($('body').attr('id') == "foodbanks-find"){
    getLocation();
  }
});
