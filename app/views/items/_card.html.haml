%div.flip-container
  %div.flipper.card{style: "background: linear-gradient(rgba(50,50,50,0.40), rgba(50,50,50,0.40)), url('#{item.food.image_url}') no-repeat center center; background-size: cover"}
    %div.front
      %div.food_expiry{style: "background: rgba(#{food_expiry_colour(item.expires_in)}, 0.85)"}
        = item.expires_in
        d
      %div.food_title
        %span= item.food.name
    %div.back
      %div.one_button
        = link_to recipes_url(ingredients: [item.food]) do
          %img.recipe_button{:src=>"/assets/recipe.png"}
      %div.other_buttons
        = link_to donate_item_path(item) do
          %img.donate_button{:src=>"/assets/donate.png"}
        = link_to use_item_path(item) do
          %img.done_button{:src=>"/assets/done.png"}
        = link_to dispose_item_path(item)  do
          %img.trash_button{:src=>"/assets/trash.png"}
